<script src="auth.js"></script>
<script>
const params = new URLSearchParams(location.search);
const gameId = params.get('id') || 'space-rush';
let gameData = null, allGames = [];

async function init() {
  updateNav();
  const res = await fetch('games.json');
  allGames = await res.json();
  gameData = allGames.find(g => g.id === gameId) || allGames[0];
  renderGame();
  renderRelated();
  updateFavBtn();
  updateMyScore();
  if (VX.isLoggedIn()) document.getElementById('scoreInputWrap').style.display = 'flex';
}

function renderGame() {
  const g = gameData;
  document.title = `${g.title} ‚Äî Vaultex`;
  document.getElementById('gameTitleBreadcrumb').textContent = g.title;
  document.getElementById('gameTitle').textContent = g.title;
  document.getElementById('gameRating').textContent = g.rating;
  document.getElementById('gamePlays').textContent = g.plays.toLocaleString('fr-FR');
  document.getElementById('gameCatBadge').textContent = `üéÆ ${g.category}`;
  document.getElementById('gameEmoji').textContent = g.emoji;
  document.getElementById('gameNamePh').textContent = g.title;
  document.getElementById('gameDescPh').textContent = g.description;
  document.getElementById('gameDesc').textContent = g.description;
  document.getElementById('gameFrameWrap').style.background = g.color;
  document.getElementById('gameTags').innerHTML = [...g.tags, g.category].map(t => `<div class="game-tag">${t}</div>`).join('');
}

function updateMyScore() {
  const score = VX.getScore(gameId);
  const el = document.getElementById('myScoreVal');
  const sub = document.getElementById('myScoreSub');
  if (!VX.isLoggedIn()) { el.textContent = '‚Äî'; sub.textContent = 'Connecte-toi pour sauvegarder'; return; }
  if (score !== null) { el.textContent = score.toLocaleString('fr-FR'); sub.textContent = 'Ton record personnel'; }
  else { el.textContent = '0'; sub.textContent = 'Lance une partie pour marquer !'; }
}

function saveScore() {
  const val = parseInt(document.getElementById('scoreInput').value);
  if (!val || val < 0) return;
  const isRecord = VX.saveScore(gameId, val);
  updateMyScore();
  document.getElementById('scoreInput').value = '';
  const btn = document.querySelector('.btn-save-score');
  btn.textContent = isRecord ? 'üèÜ Nouveau record !' : '‚úì Sauvegard√© !';
  setTimeout(() => btn.textContent = 'üíæ Sauver', 2000);
}

function updateFavBtn() {
  const isFav = VX.isFavorite(gameId);
  const btn = document.getElementById('favBtn');
  btn.textContent = isFav ? '‚≠ê' : '‚òÜ';
  btn.classList.toggle('fav-active', isFav);
}

function toggleFav() {
  if (!VX.isLoggedIn()) { location.href = 'login.html'; return; }
  VX.toggleFavorite(gameId);
  updateFavBtn();
}

function launchGame() {
  const g = gameData;
  const wrap = document.getElementById('gameFrameWrap');
  if (g.type === 'iframe' && g.src && !g.src.includes('example.com')) {
    wrap.innerHTML = `<iframe src="${g.src}" allowfullscreen sandbox="allow-scripts allow-same-origin allow-forms"></iframe>`;
  } else {
    wrap.innerHTML = `
      <div style="min-height:500px;display:flex;flex-direction:column;align-items:center;justify-content:center;gap:16px;background:${g.color}">
        <div style="font-size:6rem">${g.emoji}</div>
        <h2 style="font-family:'Syne',sans-serif">${g.title}</h2>
        <p style="color:rgba(255,255,255,.6);text-align:center;max-width:280px">Int√®gre ton jeu en rempla√ßant le champ <strong>src</strong> dans <code>games.json</code></p>
        <div style="display:flex;gap:10px;margin-top:8px">
          <div style="background:rgba(255,255,255,.1);border:1px solid rgba(255,255,255,.2);border-radius:12px;padding:14px 24px;text-align:center">
            <div style="font-size:1.5rem;font-weight:900;color:#ffd166" id="demoScore">0</div>
            <div style="font-size:.72rem;color:rgba(255,255,255,.5);font-weight:700;margin-top:2px">Score</div>
          </div>
          <div style="background:rgba(255,255,255,.1);border:1px solid rgba(255,255,255,.2);border-radius:12px;padding:14px 24px;text-align:center">
            <div style="font-size:1.5rem;font-weight:900;color:#06d6a0" id="demoLevel">1</div>
            <div style="font-size:.72rem;color:rgba(255,255,255,.5);font-weight:700;margin-top:2px">Niveau</div>
          </div>
        </div>
      </div>`;
    // Demo score ticker
    let s = 0;
    setInterval(() => {
      s += Math.floor(Math.random() * 200);
      const el = document.getElementById('demoScore');
      if (el) el.textContent = s.toLocaleString('fr-FR');
    }, 800);
  }
}

function renderRelated() {
  const related = allGames.filter(g => g.id !== gameId && g.category === gameData.category).slice(0, 4);
  document.getElementById('relatedGrid').innerHTML = related.length
    ? related.map(g => `<div class="related-card" onclick="location.href='game.html?id=${g.id}'"><div class="related-thumb" style="background:${g.color}">${g.emoji}</div><div class="related-name">${g.title}</div></div>`).join('')
    : '<p style="color:var(--text-muted);font-size:.85rem">Aucun jeu similaire.</p>';
}

function shareGame() {
  navigator.clipboard?.writeText(location.href).then(() => {
    const btn = document.querySelector('[onclick="shareGame()"]');
    btn.textContent = '‚úì'; setTimeout(() => btn.textContent = 'üîó', 1500);
  });
}

document.querySelectorAll('.stab').forEach(tab => {
  tab.addEventListener('click', () => {
    document.querySelectorAll('.stab').forEach(t => t.classList.remove('active'));
    document.querySelectorAll('.tab-panel').forEach(p => p.classList.remove('active'));
    tab.classList.add('active');
    document.getElementById('tab-' + tab.dataset.tab).classList.add('active');
  });
});

init();
</script>
</body>
</html>
